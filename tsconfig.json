{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    /* Strictness & Safety */
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    /* Debugging */
    "sourceMap": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
